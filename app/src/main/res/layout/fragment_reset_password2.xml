<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/iv_back"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:background="@mipmap/arrow_left"
                />
        </LinearLayout>

        <TextView
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#4f4f4f"
            android:text="找回密码"
            android:textSize="16sp"
            android:layout_marginRight="22dp"
            />

    </LinearLayout>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#323232"
        android:text="请设置新的登录密码  "
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        >
        <EditText
            android:id="@+id/act_login_et_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_login_bt"
            android:textColor="#323232"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:textColorHint="#b0b0b0"
            android:hint="6 - 20位新密码"
            />


        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/ll_edit_clear"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="5dp"
                android:background="@mipmap/edittext_clear"
                />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="9dp"
        android:text="注: 密码区分大小写, 建议6位以上不同数字、字母的组合"
        android:textColor="#d1d1d1"
        android:textSize="9sp"
        />

    <Button
        android:id="@+id/bt_next"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/notlogin_07"
        android:text="完成"
        android:enabled="false"
        android:textSize="16sp"
        android:textColor="#ffffff"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="遇到问题?  请"
            />
        <TextView
            android:id="@+id/tv_call_center"
            android:textColor="#323232"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="联系客服"
            />

    </LinearLayout>


</LinearLayout>
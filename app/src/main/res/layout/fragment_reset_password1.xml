<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/iv_back"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:background="@mipmap/arrow_left"
                />
        </LinearLayout>

        <TextView
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#4f4f4f"
            android:text="找回密码"
            android:textSize="16sp"
            android:layout_marginRight="22dp"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/act_registe_edt_cellphone_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_login_bt"
            android:textColor="#323232"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColorHint="#b0b0b0"
            android:hint="请输入手机号/用户名"
            android:inputType="number"
            />
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/ll_edit_clear"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="5dp"
                android:background="@mipmap/edittext_clear"
                />

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_sms_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_login_bt"
            android:textColor="#323232"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColorHint="#b0b0b0"
            android:hint="请输入验证码"
            android:layout_marginRight="20dp"
            android:inputType="number"
            />

        <TextView
            android:gravity="center"
            android:id="@+id/bt_send_sms_code"
            android:background="@drawable/bg_login_bt"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="发送"
            android:textSize="15sp"
            android:textColor="#0076ff"
            />
    </LinearLayout>


    <Button
        android:id="@+id/bt_next"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/notlogin_07"
        android:text="下一步"
        android:enabled="false"
        android:textSize="16sp"
        android:textColor="#ffffff"
        />



</LinearLayout>